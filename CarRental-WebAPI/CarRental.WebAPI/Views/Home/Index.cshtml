@model IEnumerable<Car>


@{
    ViewBag.Title = "All Cars";

}

<div class="card-deck">

    @foreach (var car in Model)
    {
        var photoPath = "~/img/" + car.PhotoPath;
        <div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
            @*setting maximum 3 cars per row*@
            <div class="card-header">
                <h3>@car.CarName</h3>
            </div>
            <img class="card-img-top imageThumbnail" asp-append-version="true"
                 src="@photoPath" />

            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="details" asp-route-id="@car.Id"
                   class="btn btn-primary m-1">View</a>
                <a asp-action="edit" asp-controller="home"
                   asp-route-id="@car.Id"
                   class="btn btn-primary m-1">Edit</a>
                <a href="#" class="btn btn-danger m-1">Delete</a>
            </div>
        </div>

    }
</div>



@section Scripts{
    <script src="~/js/CustomScript.js"></script>
}