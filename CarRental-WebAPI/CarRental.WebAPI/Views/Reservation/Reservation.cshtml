@model ReservationViewModel

@{
    ViewBag.Title = "Make a reservation";
}

    <h1 style="margin-top:100px;text-align:center;">Make a reservation</h1>

<form enctype="multipart/form-data" asp-controller="reservation" asp-action="reservation"
      method="post" class="mt-3" style="width:50%; margin:auto;">
    <div class="form-group row">
        <label asp-for="StartDate" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="StartDate" class="form-control" placeholder="StartDate">
            @*print validation error*@
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="EndDate" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="EndDate" class="form-control" placeholder="EndDate">
            @*print validation error*@
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>
    </div>
    

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10" style="margin:auto;text-align:center">
            <button type="submit" class="btn btn-primary"
                    asp-controller="reservation" asp-action="reservation">Create</button>

        </div>
    </div>
    @*This script is required to display the selected file in the file upload element*@

    @section Scripts {
        <script>
            
        </script>
    }
</form>